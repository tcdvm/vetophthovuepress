.detail
  display: block;
  position: relative;
  border-radius: 2px;
  margin: 1.2em 0;
  padding: 1.2em;
  background-color: #eee;

.detail summary
  outline: none;
  cursor: pointer;

details[open] summary ~ * {
  animation: sweep .5s ease-in-out;
}

@keyframes sweep {
  0%    {opacity: 0; margin-left: -10px}
  100%  {opacity: 1; margin-left: 0px}
}

